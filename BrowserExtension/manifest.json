{
  "name": "LDM - Download Manager Integration",
  "description": "Intercept browser downloads and send them to LDM for accelerated multi-segment downloading.",
  "version": "2.0",
  "manifest_version": 3,
  "permissions": [
    "downloads",
    "contextMenus",
    "storage"
  ],
  "host_permissions": [
    "http://127.0.0.1:45678/*"
  ],
  "options_page": "options/options.html",
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_title": "LDM - Download Manager",
    "default_popup": "popup/popup.html"
  },
  "icons": {
    "48": "icon.png"
  }
}
